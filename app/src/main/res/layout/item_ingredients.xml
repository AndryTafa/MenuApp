<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvFoodPrice"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_selected_ingredient"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:text="Buns"
        android:textColor="@color/prepartion_color"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivTick"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_minus8sdp"
        android:src="@drawable/ticksvg"
        app:layout_constraintBottom_toTopOf="@id/tvFoodPrice"
        app:layout_constraintEnd_toEndOf="@id/tvFoodPrice"
        app:layout_constraintStart_toStartOf="@id/tvFoodPrice"
         />

</androidx.constraintlayout.widget.ConstraintLayout>